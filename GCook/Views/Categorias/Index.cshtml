@model IEnumerable<GCook.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Categoria</h1>
<h4>Listagem</h4>
<p class="my-3">
    <a class="btn btn-primary" asp-action="Create"></a>
    <i class="bi bi-plus-circle me 2"></i>
    Adicionar
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExibirHome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExibirHome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <i class="bi bi-pencil text-warning me-2" title="alterar"></i>
                </a> 
                <a asp-action="Details" asp-route-id="@item.Id"> 
                    <i class="bi bi-serach text-info me-2" title="Ver Detalhes"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <i class="bi bi-trash text-danger" title=></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
